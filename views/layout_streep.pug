          tr
            td.headcol.nav-item
              a.plaatje(data-toggle='tab', href='#vooraadtab')
                img.Switch(src='/pictures/warehouse.png')
          tr
            td.headcol.nav-item
              a.plaatje(data-toggle='tab', href='#saldo')
                img.Switch(src='/pictures/geld.png')
      .linksonder
        table.okknop
          tr
            td#send.headcol
              img(src='/pictures/confirm2.png', style='height:90%')

    .rechterkant
      .tab-content
        #laatste.tab-pane.faden.active
          block strepen
        #weekstats.tab-pane.fade
          block weekStats
        #vandaagstats.tab-pane.fade
          block vandaagStats
        #wedstrijdhuis.tab-pane.fade
          block wedstrijdhuis
        #vooraadtab.tab-pane.fade
          block vooraad
        #saldo.tab-pane.fade
          block saldo

