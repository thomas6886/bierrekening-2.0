  body
    .linkerkant
      .linksboven
        table.menu.nav
          tr
            td#reset.headcol
              .plaatje
                img(src='/pictures/reset2.png')
          tr
            td#streepMethod.headcol.nav-item.active
              .plaatje
                img#streepSwitchImage(src='/pictures/on_off.png')
          tr
            td#stats.headcol.nav-item
              a.plaatje(data-toggle='tab', href='#weekstats')
                img.Switch(src='/pictures/stats2.png')
          tr
            td#wedstrijd.headcol.nav-item
