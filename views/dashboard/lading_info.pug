extends layout_dashboard


block lading
    h1 Info pagina van lading #{lading_nummer}
    .col-md-6.col-sm-6.col-xs-12
        .x_panel
            .x_title
                h2
                    | Laatste streepjes
                ul.nav.navbar-right.panel_toolbox
                    li
                        a.collapse-link
                            i.fa.fa-chevron-up
                    li.dropdown
                        a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                            i.fa.fa-wrench
                        ul.dropdown-menu(role='menu')
                            li
                                a(href='#') Settings 1
                            li
                                a(href='#') Settings 2
                    li
                        a.close-link
                            i.fa.fa-close
                .clearfix
            .x_content.extrapadding
                    table.table.table-striped
                        thead
                            th UserID
                            th Naam
                            th Datum
                            th Aantal
                        tbody
                            each item in rows
                                tr
                                td= item.USERID
                                td
                                td
                                td= item.AANTAL

    append head
        script(src='/javascript/dashboard/ladingen.js')
