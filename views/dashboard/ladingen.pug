extends layout_dashboard


block lading
    h1 alle ladingen
    .col-md-6.col-sm-6.col-xs-12
        .x_panel
            .x_title
                h2
                    | Laatste streepjes
                ul.nav.navbar-right.panel_toolbox
                    li
                        a.collapse-link
                            i.fa.fa-chevron-up
                    li.dropdown
                        a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                            i.fa.fa-wrench
                        ul.dropdown-menu(role='menu')
                            li
                                a(href='#') Settings 1
                            li
                                a(href='#') Settings 2
                    li
                        a.close-link
                            i.fa.fa-close
                .clearfix
            .x_content.extrapadding
                    table.table.table-striped#ladingList
                                thead
                                    th ID
                                    th Merk
                                    th Knop
                                tbody
                    table.table.table-striped
                        thead
                            th ID
                            th Datum open
                            th Datum gesloten
                            th Aantal krat
                        tbody
                            each item in rows
                                tr
                                td= item.LADINGID
                                td= item.DATUM_OPENED
                                td= item.DATUM_CLOSED
                                td= item.AANTALKRAT

    append head
        script(src='/javascript/dashboard/ladingen.js')
