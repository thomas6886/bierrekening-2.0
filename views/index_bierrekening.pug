                                        span leipe stats
                                    .w_center.w_55
                                        .progress
                                            .progress-bar.bg-green(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100')#prestatie_3
                                                span.sr-only 60% Complete
                                    .w_right.w_20
                                        span 3x
