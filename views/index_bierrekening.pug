extends layout_bierrekening
block home
        .col-lg-10.col-md-12
            .right_col(role='main')
                // top tiles
                .row.tile_count.no-margin
                    .col-md-2.col-sm-4.col-xs-6.tile_stats_count
                        span.count_top
                            i.fa.fa-user
                            |  Bier 2019
                        .count#persoonlijkjaar 000

                        span.count_bottom
                            i.green 4%
                            |  vergeleken met vorige maand
                    .col-md-2.col-sm-4.col-xs-6.tile_stats_count
                        span.count_top
                            i.fa.fa-clock-o
                            |  Biertjes deze maand
                        .count#persoonlijkmaand 000
                        span.count_bottom
                            i.green
                                i.fa.fa-sort-asc
                                | 3%
                            |  vergeleken met vorige maand
                    .col-md-2.col-sm-4.col-xs-6.tile_stats_count
                        span.count_top
                            i.fa.fa-user
                            |  Totaal aantal biertjes
                        .count#persoonlijktotaal 000
                        span.count_bottom
                            i.green
                                i.fa.fa-sort-asc
                                | 34%
                            |  Van vorig jaar
                    .col-md-2.col-sm-4.col-xs-6.tile_stats_count
                        span.count_top
                            i.fa.fa-user
                            |  Iederen totaal 2019
                        .count#totaaljaar 000
                        span.count_bottom
                            i.red
                                i.fa.fa-sort-desc
                                | 12%
                            |  Van vorig jaar
                    .col-md-2.col-sm-4.col-xs-6.tile_stats_count
                        span.count_top
                            i.fa.fa-user
                            |  Totaal ooit
                        .count#totaaltotaal 000
                        span.count_bottom
                            i.green
                                i.fa.fa-sort-asc
                                | 34%
                            |  From last Week
                    .col-md-2.col-sm-4.col-xs-6.tile_stats_count
                        span.count_top
                            i.fa.fa-user
                            |  Bier 2019
                        .count#persoonlijksaldo
                            .glyphicon.glyphicon-euro

                        span.count_bottom

                            |  Voorloopig saldo

                // /top tiles

                .row
                    .col-md-6.col-sm-6.col-xs-12
                        .x_panel
                            .x_title
                                h2 Prestaties
                                ul.nav.navbar-right.panel_toolbox
                                    li
                                        a.collapse-link
                                            i.fa.fa-chevron-up
                                    li.dropdown
                                        a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                                            i.fa.fa-wrench
                                        ul.dropdown-menu(role='menu')
                                            li
                                                a(href='#') Settings 1
                                            li
                                                a(href='#') Settings 2
                                    li
                                        a.close-link
                                            i.fa.fa-close
                                .clearfix
                            .x_content
                                h4 Hoe goed doe jij het
                                .widget_summary
                                    .w_left.w_25
                                        span Van kant
                                    .w_center.w_55
                                        .progress
