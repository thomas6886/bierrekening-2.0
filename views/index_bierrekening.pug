                                                span.sr-only 20% Complete
                                    .w_right.w_20
                                        span 4x
                                    .clearfix
                                .widget_summary
                                    .w_left.w_25
                                        span 1000 Bier P/J
                                    .w_center.w_55
                                        .progress
                                            .progress-bar.bg-green(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100')#prestatie_1
                                                span.sr-only 60% Complete
                                    .w_right.w_20
                                        span 1x
                                    .clearfix
                                .widget_summary
                                    .w_left.w_25
                                        span leipe stats
                                    .w_center.w_55
                                        .progress
                                            .progress-bar.bg-green(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100')#prestatie_2
                                                span.sr-only 60% Complete
                                    .w_right.w_20
                                        span 3x
                                    .clearfix
                                .widget_summary
